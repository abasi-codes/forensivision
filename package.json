{
  "name": "forensivision",
  "version": "1.0.0",
  "private": true,
  "description": "AI-generated content detection platform",
  "workspaces": [
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:services\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:services": "docker-compose up -d",
    "build": "npm run build --workspace=frontend",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "db:migrate": "cd services/auth && go run cmd/migrate/main.go up",
    "db:seed": "cd services/auth && go run cmd/seed/main.go"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "playwright": "^1.58.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
